@model IEnumerable<MVC_Prueba.Models.Clases.Empleado>

@{
    ViewBag.Title = "Empleado";
}

<h2>Empleados</h2>


    @Html.ActionLink("Nuevo", "Create")

    @using (Html.BeginForm())
    {
        <p>
            Sucursal: @Html.DropDownList("sucursal", "Todas")
            Nombre: @Html.TextBox("SearchString") <input type="submit" value="Buscar" /> 
        </p>
    }

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodVen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodSuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FuncionP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FuncionS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inactivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Legajo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodVen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodSuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FuncionP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FuncionS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inactivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Legajo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Datos", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
